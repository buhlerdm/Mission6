@{
    ViewData["Title"] = "Delete Task";
}

@model TaskResponse
<!--Provides delete functionality for records in our database-->
<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete the record for @Model.TaskName? </h3>

<form method="post" asp-controller="Home" asp-action="Delete">
    <button type="submit" class=" = "btn btn-danger">Delete</button>
    <a asp-controller="Home" asp-action="TaskQuadrant" class="btn btn-primary">Cancel</a>

    <input type="hidden" asp-for="TaskId" />
</form>