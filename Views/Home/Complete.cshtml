@{
    ViewData["Title"] = "Complete Task";
}

@model TaskResponse
<!--Provides delete functionality for records in our database-->
<h2>Confirm Completion</h2>
<h3>Did you complete the following task?</h3>
<h4> @Model.TaskName?</h4>

<form method="post" asp-controller="Home" asp-action="Complete">

    <label asp-for="Completed">Completed: </label>
    <select asp-for="Completed">
        <option value="false">No</option>
        <option value="true">Yes</option>
    </select>
    <br />

    <button type="submit" class="btn btn-primary">Confirm</button>

    <input type="hidden" asp-for="TaskId" />
    <input type="hidden" asp-for="Category" />
    <input type="hidden" asp-for="CategoryId" />
    <input type="hidden" asp-for="DueDate" />
    <input type="hidden" asp-for="Quadrant" />
    <input type="hidden" asp-for="TaskName" />

    <br />
</form>