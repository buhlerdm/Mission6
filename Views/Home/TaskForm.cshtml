@{
    ViewData["Title"] = "Task Form";
}

@model Mission6.Models.TaskResponse


<div class="text-center">
    <h1>Task Form</h1>
    <form method="post">

        <div asp-validation-summary="All"></div>

        <label asp-for="TaskName">Task: </label>
        <input asp-for="TaskName" />
        <br />

        <label asp-for="DueDate">Due Date: </label>
        <input asp-for="DueDate" />
        <br />

        <label asp-for="Quadrant">Quadrant: </label>
        <select asp-for="Quadrant">
            <option value="">Select a Quadrant</option>
            <option value=1>Urgent and Important</option>
            <option value=2>Not Urgent, but Important</option>
            <option value=3>Urgent, but Not Important</option>
            <option value=4>Not Urgent and Not Important</option>
        </select>
        <br />

        <label asp-for="CategoryId">Category: </label>
        <select asp-for="CategoryId">
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select>
        <br />

        <label asp-for="Completed">Completed: </label>
        <select asp-for="Completed">
            <option value="false">No</option>
            <option value="true">Yes</option>
        </select>
        <br />

        <button type="submit">Submit</button>
    </form>
</div>

